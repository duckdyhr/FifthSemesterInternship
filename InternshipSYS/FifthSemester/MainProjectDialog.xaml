<Window x:Class="FifthSemester.MainProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="110"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Title">
            <TextBox Name="txbMainProjectTitle" Height="25"/>
        </GroupBox>
        
        <GroupBox Grid.Row="1" Grid.ColumnSpan="3">
            <TextBox Name="TxbMainProjectDiscription" AcceptsReturn="True"></TextBox>
        </GroupBox>

        <Button Name="btnCancel" Content="Cancel" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Width="100" Margin="5" Click="btnCancel_Click"></Button>
        <Button Name="btnUpdate" Content="Update" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Right" Width="100" Margin="5" Click="btnUpdate_Click"></Button>
    </Grid>
</Window>
